<!-- modal for transfer Token -->
<div class="modal fade" id="transferModal" tabindex="-1" aria-labelledby="transferModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="transferModalLabel">Transfer Token to another UNQ wallet beneficiary.</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="transferForm">
                    <div class="mb-3">
                        <label for="mnemonic" class="form-label">Mnemonic:</label>
                        <textarea id="mnemonic" name="mnemonic" class="form-control" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="collectionId" class="form-label">Collection ID:</label>
                        <input type="text" id="collectionId" class="form-control" readonly name="collectionId" required>
                    </div>

                    <div class="mb-3">
                        <label for="tokenId" class="form-label">Token ID:</label>
                        <input type="text" id="tokenId" class="form-control" name="tokenId" required>
                    </div>

                    <div class="mb-3">
                        <label for="tokenDescription1" class="form-label">Recipient Wallet Address :</label>
                        <input type="text" id="recipient" class="form-control" name="recipient" required>
                    </div>

                    <button id="submitTransferButton" type="submit" onclick="return confirm('Are you sure you want to proceed with this transfer? This action is irreversible!')" class="btn btn-danger w-100">Complete Transfer</button>
                    <button id="pleaseWaitButton"  type="submit" class="btn btn-danger w-100" disabled style="display:none;">Please Wait...</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- end:modal for transfer -->




