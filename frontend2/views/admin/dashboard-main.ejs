<script>
  $(document).ready(function () {
    var token = localStorage.getItem("token");

    const apiUrl = `/api/getUser`;

    $.ajax({
      url: apiUrl,
      method: "GET",
      headers: {
        Authorization: `Bearer ${token}`,
      },
      success: function (response) {
        if (response.success) {
          if (!response.user.isAdmin) {
            // console.log("user.dase happening");
            $("#redeemReqPanel").hide();
          }
          // Display user points
