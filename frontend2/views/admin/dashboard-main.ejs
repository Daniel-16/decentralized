          console.error("Failed to fetch user details:", response.error);
        }
      },
      error: function (jqXHR, textStatus, errorThrown) {
        console.error("Error fetching user details:", errorThrown);
        $("#userPoints").text("Error loading points");
      },
    });
  });
</script>

