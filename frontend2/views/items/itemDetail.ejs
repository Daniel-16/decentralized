<script>
    $(document).ready(function() {
    attachPurchaseHandlers(); // Call this to bind the click event when the document is ready
});

// Handle purchase 
function attachPurchaseHandlers() {
    $('.purchase-btn').off('click').on('click', function(event) {
        event.preventDefault();

        const purchaseButton = $(this); 
        const itemId = purchaseButton.data('item-id'); 
        
        const tokenId = parseInt(purchaseButton.data('token-id'), 10); 
        const collectionId = parseInt(purchaseButton.data('collection-id'), 10); 

        $('#cover-spin').show(0); 

        const token = localStorage.getItem("token");

        $.ajax({
            url: '/api/purchaseItem',
            method: 'POST',
            contentType: 'application/json', 
            data: JSON.stringify({
                tokenId: tokenId,
                collectionId: collectionId
            }),
            headers: {
                Authorization: `Bearer ${token}` 
            },
            success: function(response) {
                if (response.success) {
                    $('#cover-spin').hide(0); 
                    Swal.fire({
                        title: "Purchase Successful!",
                        text: `You have successfully purchased this item! Visit the ${ownerName} store to redeem it.`,
                        icon: "success"
                    });

                    // Check if special token was transferred and log or display a message
                    if (response.specialTokenTransferred) {
                        console.log("Special token transferred successfully!");
                        confetti({
                            particleCount: 100,
                            spread: 70,
                            origin: { y: 0.6 },
                        });
                        Swal.fire({
                            title: "Congratulations!",
                            text: "You've won a special token! Check your profile for more details.",
                            icon: "success",
                            timer: 2000,
                            showConfirmButton: false
                        });
                    }


                    location.reload();
                } else {
                    alert('Error: ' + response.error);
                }
            },
            error: function(jqXHR) {
                let errorResponse = jqXHR.responseJSON;

                if (errorResponse && errorResponse.error) {
                    let errorTitle = "Oooopss!";
                    let errorMessage = "An error occurred";
                    
                    // Check for a ValidationError with more details
                    if (errorResponse.error.name === "ValidationError" && errorResponse.error.details) {
                        const errorDetail = errorResponse.error.details["0"];
                        const target = errorDetail.target || {};
                        const constraints = errorDetail.constraints || {};
                        
                        if (constraints.NotYourselfAddress !== undefined) {
                            errorMessage = `Address '${target.address}' cannot be the same as the destination.`;
                        }
                    } else {
                        if (errorResponse.error === 'Token is not valid') {
                            errorTitle = "Oooops!";
                            errorMessage = "You have to be signed in to purchase a coupon.";
                        } else {
                            errorMessage = errorResponse.error;
                        }
                    }

                    Swal.fire({
                        title: errorTitle,
                        text: errorMessage,
                        icon: "error"
                    });
                } else {
                    alert('Error: An unexpected error occurred.');
                }
            },
            complete: function() {
                purchaseButton.show();
                $('#cover-spin').hide(0); 
            }
        });
    });
}
// End: handle purchase 
</script>