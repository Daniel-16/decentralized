<script>
  $(document).ready(function () {
    attachPurchaseHandlers();
  });

  // Handle purchase
  function attachPurchaseHandlers() {
    $("#unqPurchase")
      .off("click")
      .on("click", async function (event) {
        event.preventDefault();

        const accountAddress = localStorage.getItem("accountAddress");

        if (!accountAddress) {
          Swal.fire({
            title: "Wallet Not Connected",
            text: "Please connect your MetaMask wallet first.",
            icon: "error",
          });
          return;
        }

        $('#cover-spin').show(0); 


        // Retrieve tokenId and collectionId from the Purchase button itself
        const tokenId = $(this).data("token-id");
        const collectionId = $(this).data("collection-id");

        // Retrieve tokenId and collectionId from the selected applyToken radio button
        const selectedApplyToken = $("input[name='applyToken']:checked");
        const applyTokenId = selectedApplyToken.data("token-id");
        const applyCollectionId = selectedApplyToken.data("collection-id");
        const tokenType = selectedApplyToken.data("token-type");
        

        const token = localStorage.getItem("token");


        $.ajax({
          url: "/api/purchaseItem",
          method: "POST",
          contentType: "application/json",
          data: JSON.stringify({
            tokenId,
            collectionId,
            applyTokenId,       
            applyCollectionId,
            tokenType
          }),
          headers: { Authorization: `Bearer ${token}` },
          success: function (response) {
            $('#cover-spin').hide(0); 
            if (response.success) {
              Swal.fire({
                title: "Purchase Successful!",
                text: "You have successfully purchased this item!",
                icon: "success",
              });
            }
            location.reload();
          },
          error: function (jqXHR) {
            $('#cover-spin').hide(0); 
            let errorResponse = jqXHR.responseJSON;
            Swal.fire({
              title: "Error",
              text: errorResponse?.error || "An unexpected error occurred.",
              icon: "error",
            });
          },
        });
      });
  }
</script>


