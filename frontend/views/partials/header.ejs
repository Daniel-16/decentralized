<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
     $(document).ready(function () {
        // Logout event handler
        $("#logout").on("click", function (e) {
            e.preventDefault();
            // Clear the token from localStorage
            localStorage.removeItem("token");

            // Optionally, make an API call to destroy the session on the server-side
            $.ajax({
            url: "/api/logout", // assuming you have a logout route on your backend
            method: "POST",
            success: function (response) {
                // Redirect to the login page or home page after logout
                window.location.href = "/login"; // or "/"
            },
            error: function (error) {
                console.log("Error logging out:", error);
                // You might still want to redirect even if there's an error
                window.location.href = "/login"; // or "/"
            },
            });
        });
    });
</script>
