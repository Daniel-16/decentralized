        <script>
    document.addEventListener("DOMContentLoaded", function() {
        var token = localStorage.getItem("token");

        if (token) {
            // Hide the login button
            var loginButton = document.getElementById("sys_head_login");
            if (loginButton) {
                loginButton.style.display = "none";
            }

            // Token exists, add the "My Account" dropdown menu
            var mainMenu = document.getElementById("main-menu");

            // Create the "My Account" dropdown menu
            var accountMenu = `
                <li class="has-sub">
                    <a href="coupon-code.html">My account</a>
                    <ul class="sub-menu">
                        <li><a href="#">My profile</a></li>
                        <li><a href="/item/create">New Item</a></li>
                        <li><a href="/transactions">My Transactions</a></li>
                        <li><a href="#">Logout</a></li>
                    </ul>
                </li>
            `;

            // Append the account menu to the main menu
            mainMenu.innerHTML += accountMenu;
        }
    });
</script>

